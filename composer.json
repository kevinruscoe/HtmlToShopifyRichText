{
    "name": "kevinruscoe/html-to-shopify-rich-text",
    "description": "A PHP library to convert HTML to Shopify's Rich Text format",
    "type": "library",
    "require": {
        "php": "^8.3",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "symfony/dom-crawler": "^7.2",
        "symfony/css-selector": "^7.2",
        "ezyang/htmlpurifier": "^4.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "KevinRuscoe\\HtmlToShopifyRichText\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KevinRuscoe\\HtmlToShopifyRichText\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
